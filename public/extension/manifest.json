{
  "manifest_version": 3,

  "name": "nostr-keyx",
  "version": "1.5.0",
  "description": "A NIP-07 browser extension that uses the OS's keychain or YubiKey to protect your private keys.",
  "author": "Susumu OTA",
  "homepage_url": "https://github.com/susumuota/nostr-keyx",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "world": "MAIN",
      "js": ["inject.js"],
      "run_at": "document_start"
    }
  ],

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "nostr-keyx",
    "default_popup": "popup.html"
  },

  "permissions": [
    "nativeMessaging",
    "storage",
    "tabs"
  ]
}
